<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingLeft="3dp" android:paddingRight="3dp" android:paddingTop="1dp" android:paddingBottom="1dp">

    <LinearLayout
	    android:layout_width="match_parent" android:layout_height="59dp"
	    android:orientation="horizontal" android:background="@drawable/call_box_en"
		android:gravity="center_vertical">
	    <TextView
	        android:id="@+id/tvName"
	        android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:layout_marginLeft="18dp"
	        android:text="홍길동" android:textSize="19sp" android:textColor="#2d2c2c"
	        android:gravity="center" />
	    <TextView
	        android:id="@+id/tvPhoneNumber"
	        android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"
	        android:layout_marginRight="18dp"
	        android:text="홍길동" android:textSize="9.5sp" android:textColor="#7e7a7a"
	        android:gravity="right" />
    </LinearLayout>

</LinearLayout>
